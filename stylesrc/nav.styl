@import colors

nav
  width: 100%
  display: flex
  position: fixed;
  padding: 0px 16px
  justify-content: space-between
  align-items: stretch;
  background-color: theme-color
  color: white-color
  box-sizing: border-box
  z-index: 10
  transition: background-color 0.5s

  h1
    font-size: 1.3em
    color: white-color

  #hamburger
    display: none

  .logo
    margin: 0px 16px

  ul
    display: flex
    min-width: 50%
    margin: 0
    padding: 0

    li
      flex-grow: 1
      transition: background-color 0.1s

      a
        display: block
        text-align: center
        color: inherit;
        padding: 16px 0px

    li:hover
      background-color: white-color
      color: theme-color

  .centerhelper
    display: none
    visibility: hidden;
    text-align: center;
    padding: 16px 0px;

nav.transparent
  background: rgba(0,0,0,0)

@media (max-width: 44em)
  nav

    #hamburger
      display: flex;
      padding: 0px 8px

      svg
        display: block;
        fill: white-color;

    .centerhelper
      display: block;

    ul.responsivemenu
      visibility: hidden;
      display: block;
      position: fixed;
      transform: translate(-50px);
      opacity: 0;
      left: 0;
      top: 0;
      min-width: 0
      background-color: black-color;
      transition: transform 0.2s, opacity 0.1s;
      height: 100vh;

      li > a:not(.centerhelper)
        padding: 16px 48px

    ul.visible
      visibility: visible
      opacity: 1;
      transform: none;
