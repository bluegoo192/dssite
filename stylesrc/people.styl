@import colors

h1.title
  font-size: 3em
  margin-top: 2em
  margin-bottom: 1em

#alumn
  justify-content: space-around

.credit
  text-align: center
  padding: 16px
  max-width: 360px

.tilecontainer
  display: flex
  flex-wrap: wrap
  width: 100
  justify-content: center
  margin: 0

  .tile
    width: 180px
    height: 180px
    color: white-color
    text-align: center
    background-position: center;
    position: relative
    background-size: 100% 100%
    cursor: pointer
    transition: background-size 0.5s

    .tile-label
      visibility: hidden
      z-index: 5
      letter-spacing: 1px

      h3
        user-select: none

    .tile-label::before
      content: "";
      position: absolute
      left: 0
      top: 0
      width: 100%;
      height: 100%;
      opacity: .8;
      z-index: -1;
      background-color: black-color

  .tile.active
    background-size: 125% 125%

    .tile-label
      visibility: visible

.modal-enter-active, .modal-leave-active
  transition: opacity 0.3s

  .content
    transition: transform 0.2s

.modal-enter, .modal-leave-to
  opacity: 0

  .content
    transform: translate(0px, 64px)

#popupDescription
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  z-index: 10

  .content
    background-color: white-color
    padding: calc(32px + 2vh) 32px
    border-radius: 4px
    box-sizing: border-box
    box-shadow: 0px 0px 5vw black-color
    width: 80%
    max-width: 480px
    z-index: 10

    h3
      opacity: 0.7
      margin-bottom: 16px

    p
      margin-top: 4vh

    img
      border-radius: 50%
      width: 90%
      max-width: 160px
      border: 8px pure-white solid
      box-shadow: 0px 0px 4px black-color


#modalBackground
  background-color: black-color
  opacity: 0.5
  position: fixed
  z-index: 5
  width: 100%
  height: 100%
  top: 0
  left: 0

.member
  width: 50%
  max-width: 40%
  display: flex
  flex-direction: column
  align-items: center

  h4
    font-size: 1.2em
    margin: 0
    letter-spacing: 1px
