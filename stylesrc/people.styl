@import colors

.tilecontainer
  display: flex
  flex-wrap: wrap
  width: 100
  justify-content: center
  margin: 0

  .tile
    width: 180px
    height: 180px
    color: white-color
    text-align: center
    position: relative
    background-size: 100% 100%
    transition: background-size 0.5s

    .tile-label
      visibility: hidden
      z-index: 5

    .tile-label::before
      content: "";
      position: absolute
      left: 0
      top: 0
      width: 100%;
      height: 100%;
      opacity: .7;
      z-index: -1;
      background-color: black-color

  .tile.active
    background-size: 125% 125%

    .tile-label
      visibility: visible

#popupDescription
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  z-index: 10

  .content
    background-color: white-color
    padding: 32px
    border-radius: 8px
    z-index: 10

#modalBackground
  background-color: black-color
  opacity: 0.5
  position: fixed
  z-index: 5
  width: 100%
  height: 100%
  top: 0
  left: 0
