@import colors

h1.title
  font-size: 3em
  margin-top: 2em
  margin-bottom: 1.5em

#alumn
  justify-content: space-around

.credit
  text-align: center
  padding: 16px

.tilecontainer
  display: flex
  flex-wrap: wrap
  width: 100
  justify-content: center
  margin: 0

  .tile
    width: 180px
    height: 180px
    color: white-color
    text-align: center
    background-position: center;
    position: relative
    background-size: 100% 100%
    cursor: pointer
    transition: background-size 0.5s

    .tile-label
      visibility: hidden
      z-index: 5
      letter-spacing: 1px

    .tile-label::before
      content: "";
      position: absolute
      left: 0
      top: 0
      width: 100%;
      height: 100%;
      opacity: .8;
      z-index: -1;
      background-color: black-color

  .tile.active
    background-size: 125% 125%

    .tile-label
      visibility: visible

.modal-enter-active, .modal-leave-active
  transition: opacity 0.3s

  .content
    transition: transform 0.2s

.modal-enter, .modal-leave-to
  opacity: 0

  .content
    transform: translate(0px, 64px)

#popupDescription
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  z-index: 10

  .content
    background-color: white-color
    padding: 32px
    border-radius: 4px
    box-sizing: border-box
    box-shadow: 0px 0px 5vw black-color
    width: 80%
    max-width: 480px
    z-index: 10

#modalBackground
  background-color: black-color
  opacity: 0.5
  position: fixed
  z-index: 5
  width: 100%
  height: 100%
  top: 0
  left: 0
