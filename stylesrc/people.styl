@import colors

.tilecontainer
  display: flex
  width: 100%
  margin: 0

  .tile
    width: 160px
    height: 160px

    img
      width: 100%
      height: 100%

#popupDescription
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0

  .content
    background-color: white-color
    padding: 32px
    border-radius: 8px
    z-index: 10

#modalBackground
  background-color: black-color
  opacity: 0.5
  position: fixed
  z-index: 5
  width: 100%
  height: 100%
  top: 0
  left: 0
