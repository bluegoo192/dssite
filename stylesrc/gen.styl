@import colors

body
  color: black-color;
  background-color: white-color;
  margin: 0
  padding: 0
  width: 100%
  font-family: 'Open Sans', sans-serif;
  font-size: 1em;

.maincontainer
  width: 100%

.border-box
  box-sizing: border-box

.wrap
  flex-wrap: wrap

a
  text-decoration: none
  color: theme-color
  cursor: pointer

.vertical
  input
    margin-bottom: 8px
    width: 100%

a:hover
  text-decoration: underline

p.large
  font-size: 1.2em

h1
  margin: 0

button, input.button
  cursor: pointer;
  letter-spacing: 1px;

.submitButton
  font-size: 1.1em
  border-radius: 0
  background-color: #2DC455
  color: white-color
  border: none
  padding: 8px 16px

ul li
  list-style: none;

.themecolor
  color: theme-color;

.widecontainer
  max-width: 720px

.accent
  color: accent-color

.bottomdivider
  margin-bottom: 3vh;

.divider5
  height: 5vh

.divider10
  height: 10vh

.notification
  border: 1px solid theme-color

.notification:hover
  background-color: theme-color-translucent

.notification-read-pending, .notification-read-pending:hover
  background-color: theme-color
  color: white-color

.stack
  width: 100%
  box-sizing: border-box
  flex-direction: column;

.hpadded
  padding: 8px 16px;

.scaledpadded
    padding: 5em 5em;

.flexcontainer
  display: flex;

.flexcontainer.spaced
  justify-content: space-around;

.center
  display: table;
  margin: auto;

.fill-h
  width: 100%

.vcentercontainer
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

.flexcontainer.horizontal
  flex-direction: row;

.flexcontainer.vertical
  flex-direction: column;

.purewhite
  background-color: #fff

.invisible
  visibility: hidden;

.flex
  display: flex;

.material
  box-shadow: 0px 0px 8px black-color;

.error-message
  box-sizing: border-box
  padding: 4px 8px
  color: #DE0707

footer
  background-color: black-color
  color: white-color
  font-size: 0.9em
  padding: 32px
  padding-top: 48px

  p.small
    margin: 0
    text-align: center
    opacity: 0.5

  .column
    margin-bottom: 32px

  h4, h3
    margin: 0

  ul
    padding: 0
    margin: 0

  a
    color: white-color

input
  box-sizing: border-box

form
  box-sizing: border-box

// Relatively self-contained modal.
// Can be embedded into any component while keeping its look & feel
.modal
  position: fixed
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  background-color: white-color
  color: black-color
  padding: 12px 24px
  z-index: 100

.invalidInput
  border: 1px solid #abc

// translucent backdrop behind modal that hides the rest of content
.modal-backdrop-overlay
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: black-color
  opacity: 0.5

a.loginToggleButton
  color: blue-color
  text-decoration: none
  cursor: pointer

@media (max-width: 35em)

  .msquare
    min-height: 100vw

  .scaledpadded
    padding: 3em 3em;

  footer

    h3
      margin-bottom: 32px

    .flexcontainer
      flex-direction: column;

    .column
      display: flex
      justify-content: space-between
      width: 100%
