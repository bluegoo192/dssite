white-color = #ecf0f1
white-color-light = #F6FAFB
grey-color = #7f8c8d
grey-color-light = #bdc3c7
black-color = #2c3e50
theme-color = #65D5FD
cta-color = #e67e22
cta-color-dark = #d35400

html, body
  margin: 0
  padding: 0
  width: 100%
  font-family: 'Open Sans', sans-serif
  font-size: 1em
  height: 100vh

#container
  width: 100%
  height: 100vh
  display: flex
  justify-content: center
  background-color: white-color
  align-items: center

span.code
  background-color: grey-color-light
  border: 1px solid grey-color
  padding: 1px 6px
  font-family: 'Courier New', serif
  opacity: 0.6
  margin: 0px 1px
  border-radius: 2px

.centercontainer
  width: 100%
  display: flex
  justify-content: center

.cta
  background-color: cta-color
  color: white-color
  padding: 12px
  margin: 8px
  cursor: pointer

.cta:hover
  background-color: cta-color-dark

.info
  margin: 48px
  color: grey-color

  ul
    margin: 0
    padding: 0

  li
    color: grey-color
    list-style: none

.card
  min-width: 30vw
  max-width: 20vw
  box-shadow: 0px 0px 8px grey-color
  padding: 0
  background-color: white-color-light

  > *
    padding: 16px

  h1
    letter-spacing: 1px

  .colored
    background-color: theme-color
    color: white-color

    span.code
      background-color: alpha(grey-color, 0.3)
      border: 1px solid grey-color-light
      opacity: 0.9
