white-color = #F5F6F6
grey-color = #BEC1C2
grey-color-light = #D9DDDE
black-color = #263033
theme-color = #293E7B
cta-color = #20814A
cta-color-dark = #005B28

html, body
  margin: 0
  padding: 0
  width: 100%
  font-family: 'Open Sans', sans-serif
  font-size: 1em
  height: 100vh

#container
  width: 100%
  height: 100vh
  display: flex
  justify-content: center
  background-color: white-color
  align-items: center

span.code
  background-color: grey-color-light
  border: 1px solid grey-color
  padding: 1px 6px
  font-family: 'Courier New', serif
  opacity: 0.6
  margin: 0px 1px
  border-radius: 2px

.centercontainer
  width: 100%
  display: flex
  justify-content: center

.cta
  background-color: cta-color
  color: white-color
  padding: 12px
  margin: 8px
  cursor: pointer

.cta:hover
  background-color: cta-color-dark

.card
  min-width: 30vw
  max-width: 20vw
  box-shadow: 0px 0px 8px grey-color
  padding: 0

  > *
    padding: 16px

  .colored
    background-color: theme-color
    color: white-color

    span.code
      background-color: alpha(grey-color, 0.3)
      border: 1px solid grey-color-light
      opacity: 0.8
