.alert
    width 90%
    position fixed
    padding 20px
    padding-left 2em
    background-color #FFAA1D
    color black
    z-index: 5
    margin-top 3em
    opacity 1
    transition opacity 0.6s

.closebtn
    margin-left 15px
    color black
    font-weight bold
    float right
    font-size 22px
    line-height 20px
    cursor pointer
    transition 0.3s
    &:hover
        color white

.resources
  padding-left: 24px
  padding-right: 24px
  box-sizing: border-box

iframe
  border: 0
  width: 100%
  height: 80vh
