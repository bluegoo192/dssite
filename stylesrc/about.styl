@import colors

h1
  font-size: 3em

h2
  font-size: 2em

h3
  font-size: 1.5em

.banner
  width: 100%
  height: 25vh
  min-height: 140px
  background-image: url("/images/sql_workshop.jpg")
  background-size: cover
  background-attachment: fixed

  .filter
    width: 100%
    height: 100%
    background-color: black-color
    opacity: 0.2

.flex
  flex-flow: row wrap

article
  flex: 1 1 360px
  max-width: 580px
  min-width: 360px
  font-size: 1.1em
  margin: calc(4vw+12px)
  border-left: 4px theme-color solid
  padding: 4px 16px

#stats
  font-size: 1.6em
  flex: 1 1 300px
  max-width: 100%
  margin: 16px
  color: theme-color

  span
    font-size: 2em
    margin-right: 8px

  img
    margin-right: 12px
    fill: theme-color

.arrow-up
  width: 0
  height: 0
  border-left: 8px solid transparent
  border-right: 8px solid transparent
  border-bottom: 8px solid black-color

#tab-carousel
  width: 100%
  margin: 32px 0px

  ul
    display: flex
    padding: 0
    margin: 0
    flex-wrap: nowrap
    overflow-x: auto
    justify-content: space-around
    background-color: white-color
    margin-bottom: 0
    padding-bottom: 0

    li
      flex: 0 0 auto
      color: black-color

      button
        background: none
        padding: 8px 16px
        border: none
        font-size: 1em
        color: inherit

  .info
    background-color: black-color
    color: white-color

    p
      margin: 0
      padding: 32px

    img
      width: 100%
      height: 25vh
      min-height: 140px
      object-fit: cover
