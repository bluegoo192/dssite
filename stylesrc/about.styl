@import colors

.banner
  width: 100%
  height: 25vh
  min-height: 140px
  object-fit: cover

article
  max-width: 640px
  font-size: 1.1em
  margin: calc(4vw+12px)
  border-left: 4px theme-color solid
  padding: 4px 16px

#stats
  font-size: 1.6em
  color: theme-color

  span
    font-size: 2em
    margin-right: 8px

  img
    margin-right: 12px
    fill: theme-color
