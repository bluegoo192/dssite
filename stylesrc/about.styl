@import colors

h1
  font-size: 3em

.banner
  width: 100%
  height: 25vh
  min-height: 140px
  object-fit: cover

.flex
  flex-flow: row wrap

article
  flex: 1 1 360px
  max-width: 580px
  min-width: 360px
  font-size: 1.1em
  margin: calc(4vw+12px)
  border-left: 4px theme-color solid
  padding: 4px 16px

#stats
  font-size: 1.6em
  flex: 1 1 300px
  max-width: 100%
  margin: 16px
  color: theme-color

  span
    font-size: 2em
    margin-right: 8px

  img
    margin-right: 12px
    fill: theme-color
