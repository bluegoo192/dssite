@import colors

h1
  font-size: 3em

h2
  font-size: 2em

h3
  font-size: 1.5em

.alert
    width 90%
    position fixed
    padding 20px
    padding-left 2em
    background-color #FFAA1D
    color black
    z-index: 5
    margin-top 3em
    opacity 1
    transition opacity 0.6s

.closebtn
    margin-left 15px
    color black
    font-weight bold
    float right
    font-size 22px
    line-height 20px
    cursor pointer
    transition 0.3s
    &:hover
        color white

.banner
  width: 100%
  height: 25vh
  min-height: 140px
  background-image: url("/images/sql_workshop.jpg")
  background-size: cover
  background-attachment: fixed

  .filter
    width: 100%
    height: 100%
    background-color: black-color
    opacity: 0.2

.flex
  flex-flow: row wrap

.fullwidth
  width: 100%
  max-width: 100%
  box-sizing: border-box
  margin: 0
  padding: calc(4vw+12px)

article
  flex: 1 1 360px
  max-width: 580px
  font-size: 1.1em
  margin: calc(4vw+12px)
  padding: 4px 16px

.left-border
  border-left: 4px theme-color solid

#faq
  font-size: 0.8em

  h3
    font-size: 0.8em
    margin-bottom: 0

  p
    font-size: 0.6em
    font-weight: normal
    margin-top: 0

#stats
  font-size: 1.7em
  flex: 1 1 300px
  max-width: 100%
  margin: 16px
  color: theme-color

  span
    font-size: 2.1em
    margin-right: 8px

  img
    margin-right: 12px
    fill: theme-color

.arrow-up
  width: 0
  height: 0
  border-left: 8px solid transparent
  border-right: 8px solid transparent
  border-bottom: 8px solid black-color

.contact
  max-width: 320px
  width: 45%
  padding: 16px
  box-sizing: border-box
  word-wrap: break-word

  p.email
    text-align: center

.wrapped
  flex-wrap: wrap

#tab-carousel
  width: 100%
  margin: 32px 0px

  ul
    display: flex
    padding: 0px 8vw
    margin: 0
    flex-wrap: nowrap
    overflow-x: auto
    justify-content: space-between
    background-color: white-color

    li
      flex: 0 0 auto
      color: black-color

      button
        background: none
        padding: 8px 16px
        border: none
        font-size: 1em
        color: inherit

  .info
    background-color: black-color
    color: white-color
    padding: 32px
    flex-wrap: wrap

    p
      margin: 0
      margin-bottom: 32px
      max-width: 480px
      padding: 32px

    img
      width: 100%
      max-width: 480px
      min-width: 260px
      height: 280px
      min-height: 140px
      opacity: 0.8
      border-radius: 2px
      object-fit: cover
      border: 6px white-color solid
