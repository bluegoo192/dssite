@import colors

h1
  font-size: 3em

h2
  font-size: 2em

h3
  font-size: 1.5em

.banner
  width: 100%
  height: 25vh
  min-height: 140px
  background-image: url("/images/sql_workshop.jpg")
  background-size: cover
  background-attachment: fixed

  .filter
    width: 100%
    height: 100%
    background-color: black-color
    opacity: 0.2

.flex
  flex-flow: row wrap

article
  flex: 1 1 360px
  max-width: 580px
  min-width: 360px
  font-size: 1.1em
  margin: calc(4vw+12px)
  border-left: 4px theme-color solid
  padding: 4px 16px

#stats
  font-size: 1.6em
  flex: 1 1 300px
  max-width: 100%
  margin: 16px
  color: theme-color

  span
    font-size: 2em
    margin-right: 8px

  img
    margin-right: 12px
    fill: theme-color

#tab-carousel
  width: 100%

  ul
    display: flex
    padding: 0
    flex-wrap: nowrap
    overflow-x: auto
    justify-content: space-around

    li
      flex: 0 0 auto
      padding: 16px
