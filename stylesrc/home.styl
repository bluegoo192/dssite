@import colors

button.cta
  background-color: accent-color;
  color: white-color;
  border: none;
  padding: 12px;
  z-index: 1
  font-size: 1.1em;

.maincontainer
  display: flex
  flex-direction: column
  align-items: center

button.cta:hover
  background-color: accent-dark;

h2
  letter-spacing: 1px
  font-size: 2em

#hero
  height: 80vh
  position: relative
  color: white-color;
  background-image: url('/images/hero.jpg');
  background-color: alpha(theme-color, 0.6)
  background-blend-mode: color-dodge;
  background-size: cover;
  background-attachment: fixed;

h1
  font-size: 2em;
  z-index: 1
  transition: width 0.5s

article.large
  width: 80vw
  max-width: calc(100% - 32px)
  margin-top: 10vh
  font-size: 1.2em

  h1
    margin-bottom: 7vh
    font-size: 2.5em

  p
    max-width: 640px

#join
  margin-top: 16px
  padding-top: 1vh
  justify-content: center
  align-items: center

  article
    width: 40%
    max-width: 350px
    padding: 0px 24px

.logos
  width: 100%
  max-width: 850px
  padding: 16px
  box-sizing: border-box
  margin: 2vh 0
  flex-wrap: wrap

  svg
    padding: 16px
    width: 120px
    fill: black-color !important
    opacity: 0.8

    path
      fill: black-color !important
      opacity: 0.8

.fineprint
  font-size: 0.8em
  opacity: 0.6

.white
  background-color: pure-white
  width: 100%
  padding: 36px 0px

.columns
  margin-top: 7vh
  margin-bottom: 7vh
  display: flex
  justify-content: space-around
  width: 100%
  max-width: 1300px
  padding: 32px
  box-sizing: border-box

  article
    margin: 24px
    box-sizing: border-box
    width: 25%
    max-width: 300px

    svg
      width: 75%
      fill: black-color
      opacity: 0.8

    p
      font-size: 1.1em

#buzzword
  animation-name: slideout
  display: inline-block;
  animation-duration: 3s
  animation-iteration-count: infinite;
  z-index: 0

#mainexpl
  padding: 5em 5em
  background-color: theme-color
  color: white-color

@media (max-width: 35em)

  h1
    font-size: 1.5em;

  #hero
    height: 100vw;

  #mainexpl
    padding: 4em 4em

@media (max-width: 700px)

  .columns
    flex-direction: column
    align-items: stretch

    article
      width: 100%
      max-width: none
      padding: 4vw

      svg
        width: 60%

@keyframes slideout
    0%  {
      transform: translate(0px, -70px);
      opacity: 0;
    }
    15%   {
            transform: translate(0px, 0px);
            opacity: 1;
          }
    85%   {
            transform: translate(0px, 0px);
            opacity: 1;
          }
    100% {
            transform: translate(0px, 70px);
            opacity: 0;
          }
