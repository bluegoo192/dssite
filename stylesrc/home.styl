@import colors

button.cta
  background-color: accent-color;
  color: white-color;
  border: none;
  padding: 12px;
  z-index: 1
  font-size: 1.1em;

.maincontainer
  display: flex
  flex-direction: column
  align-items: center

button.cta:hover
  background-color: accent-dark;

h2
  letter-spacing: 1px
  font-size: 2em

#hero
  height: 80vh
  position: relative
  color: white-color;
  background-image: url('/images/hero.jpg');
  background-size: cover;
  background-attachment: fixed;

  .filter
    position: absolute
    opacity: 0.4
    z-index: 0
    left: 0
    top: 0
    width: 100%
    height: 100%
    background-color: theme-color

h1
  font-size: 2em;
  z-index: 1
  transition: width 0.5s

article.large
  width: 80vw
  max-width: calc(100% - 32px)
  margin-top: 10vh
  font-size: 1.2em

  h1
    margin-bottom: 7vh
    font-size: 2.5em

  p
    max-width: 640px

.columns
  margin-top: 7vh
  margin-bottom: 7vh
  display: flex
  justify-content: space-around
  width: 100%
  max-width: 1300px
  padding: 32px
  box-sizing: border-box

  article
    margin: 24px
    box-sizing: border-box
    width: 25%
    max-width: 300px

    svg
      width: 75%
      fill: black-color
      opacity: 0.8

    p
      font-size: 1.1em

#buzzword
  animation-name: slideout
  display: inline-block;
  animation-duration: 3s
  animation-iteration-count: infinite;
  z-index: 0

#mainexpl
  padding: 5em 5em
  background-color: theme-color
  color: white-color

@media (max-width: 35em)

  h1
    font-size: 1.5em;

  #hero
    height: 100vw;

  #mainexpl
    padding: 4em 4em

@media (max-width: 900px)

  .columns
    flex-direction: column
    align-items: stretch

    article
      width: 100%
      max-width: none

@keyframes slideout
    0%  {
      transform: translate(0px, -70px);
      opacity: 0;
    }
    15%   {
            transform: translate(0px, 0px);
            opacity: 1;
          }
    85%   {
            transform: translate(0px, 0px);
            opacity: 1;
          }
    100% {
            transform: translate(0px, 70px);
            opacity: 0;
          }
