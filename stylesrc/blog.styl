@import colors

h1
  font-size: 1.5em
  padding-left: 5vw
  opacity: 0.3
  font-weight: bold

.c-container
  position: relative
  padding-bottom: 64px
  overflow: hidden

.content
  width: 100%
  flex-direction: column
  align-items: center
  transition: transform 0.5s

  article
    width: 48rem
    max-width: 100%
    padding: 20px
    margin: 0
    margin-top: 32px
    box-sizing: border-box
    border: 1px transparent solid

    h2
      font-size: 2em
      margin: 0
      cursor: pointer

    h2:hover
      text-decoration: underline

    p
      margin: 0
      margin-top: 16px

    p.by
      text-align: right

  article.mini
    background-color: pure-white
    box-shadow: 0px 0px 32px grey-color
    border-radius: 4px

  &.under
    transform: translateX(-160px);
    z-index: -10

#fullpost
  position: absolute
  visibility: hidden
  opacity: 0
  z-index: 5
  height: 100%
  width: 100%
  left: 0
  top: 0

  #expanded
    position: fixed
    left: 0
    transform: translateX(640px);
    height: 100%
    width: 100%
    top: 0
    background-color: white-color
    box-shadow: 0px 0px 340px black-color
    padding: 64px
    box-sizing: border-box
    transition: transform 0.5s
    overflow-y: scroll

    article
      width: 100%
      box-sizing: border-box
      padding: 12px
      max-width: 680px

  &:not(.shown)
    transition: visibility 0s, opacity 0.5s

  &.shown
    visibility: visible
    opacity: 1
    transition: opacity 0.5s

    #expanded
      transform: translateX(10vw);

footer
  z-index: 10
