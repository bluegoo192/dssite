@import colors

h1
  font-size: 1.5em
  padding-left: 5vw
  opacity: 0.3
  font-weight: bold

.content
  width: 100%
  flex-direction: column
  align-items: center

  article
    width: 48rem
    max-width: 100%
    padding: 20px
    margin: 0
    margin-top: 32px
    box-sizing: border-box
    border: 1px transparent solid

    h2
      font-size: 2em
      margin: 0
      cursor: pointer

    h2:hover
      text-decoration: underline

    p
      margin: 0
      margin-top: 16px

    p.by
      text-align: right

  article.mini
    background-color: pure-white
    box-shadow: 0px 0px 32px grey-color
    border-radius: 4px

article#expanded
  width: 52rem
  background-color: white-color
  padding: 3rem

footer
  margin-top: 64px
