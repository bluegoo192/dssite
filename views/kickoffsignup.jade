extends layout

block content
  .modal-backdrop-overlay
  .modal.vcentercontainer(v-if="!hasAccessCode")
    input.accessCode(v-model="accessCode" type="text" placeholder="Enter your access code here")
    button.submitButton(@click="saveAccessCode") Submit
  .modal.vcentercontainer(v-if="hasAccessCode")
    #logocontainer.vcentercontainer
      img(src='/images/logo_white_simple.png')
    .hellapadding
      p.word-wrap#message(v-if="message") {{ message }}
      .center.vertical
        input.hpadded(v-model="form.email" type="email" name="email" placeholder="ucsb.edu email")
        br
        input.hpadded(v-model="form.password" type="password" name="password" placeholder="password")
        br
        input.hpadded(v-model="form.firstName" type="text" name="firstName" placeholder="first name")
        br
        input.hpadded(v-model="form.lastName" type="text" name="lastName" placeholder="last name")
        br
        input.hpadded(v-model="form.yearStartedSchool" type="number" min="2000" name="yearStartedSchool" placeholder="year started school")
        br
        input.hpadded(v-model="form.lastKnownMajor" type="text" name="lastKnownMajor" placeholder="current major(s)")
        br
        button.submitButton#submit(:disabled="!validated || show.status === 'Loading...'" @click="register") {{ show.status }}
    

block scripts
  script(src="https://cdn.jsdelivr.net/npm/vue-resource@1.5.1")
  script(src="/javascripts/kickoffsignup.js")

block styles
  link(rel='stylesheet', href='/stylesheets/kickoffsignup.css')
